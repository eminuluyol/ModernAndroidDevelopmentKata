<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="GlobalTextViewStyle">
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">16sp</item>
    <item name="android:fontFamily">@font/sarabun_regular</item>
  </style>

  <style name="GlobalMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
    <item name="labelVisibilityMode">labeled</item>
    <item name="itemHorizontalTranslationEnabled">false</item>
    <item name="itemTextColor">@color/bottom_nav_color</item>
    <item name="itemIconTint">@color/bottom_nav_color</item>
    <item name="android:layout_gravity">bottom</item>
  </style>

</resources>
