<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="GlobalTextViewStyle">
    <item name="android:textColor">@color/black</item>
  </style>

  <style name="GlobalMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
    <item name="android:textAllCaps">false</item>
    <item name="backgroundTint">@color/colorAccent</item>
  </style>

  <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
    <item name="labelVisibilityMode">labeled</item>
    <item name="itemHorizontalTranslationEnabled">false</item>
    <item name="itemTextColor">@color/bottom_nav_color</item>
    <item name="itemIconTint">@color/bottom_nav_color</item>
    <item name="android:layout_gravity">bottom</item>
  </style>

  <style name="GlobalDrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">true</item>
    <item name="color">@color/black</item>
  </style>

</resources>
