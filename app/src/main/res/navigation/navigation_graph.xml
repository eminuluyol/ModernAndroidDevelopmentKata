<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph">

    <fragment
        android:id="@id/navigation_movies"
        android:name="com.taurus.modernandroiddevelopmentkata.movies.MovieFragment"
        tools:layout="@layout/fragment_movie">
    </fragment>

    <fragment
        android:id="@id/navigation_tv_series"
        android:name="com.taurus.modernandroiddevelopmentkata.tvseries.TVSeriesFragment"
        tools:layout="@layout/fragment_tv_series">
        <!-- navigate to nested graph directly, passing args for its startDestination -->
        <action
            android:id="@+id/navigate_from_tv_series_to_details"
            app:destination="@id/navigation_graph_details" >
            <argument
                android:name="title"
                app:argType="string"/>
        </action>
    </fragment>

    <fragment
        android:id="@id/navigation_favourites"
        android:name="com.taurus.modernandroiddevelopmentkata.favourites.FavouriteFragment"
        tools:layout="@layout/fragment_favourite" />

    <fragment
        android:id="@id/navigation_profile"
        android:name="com.taurus.modernandroiddevelopmentkata.profile.ProfileFragment"
        tools:layout="@layout/fragment_profile" />

    <include app:graph="@navigation/navigation_graph_details" />
    <!-- navigate to nested graph via a global action -->
    <!-- An action is "global" only within its graph, and not visible in other graphs -->
    <action
        android:id="@+id/navigation_graph_details_start"
        app:destination="@id/navigation_graph_details">
        <argument
            android:name="title"
            app:argType="string" />
    </action>

    <!-- Navigating from one nested graph to another requires a global action -->
    <include app:graph="@navigation/navigation_graph_similar_movies" />
    <action
        android:id="@+id/navigation_graph_similar_movies_start"
        app:destination="@id/navigation_graph_similar_movies">
        <argument
            android:name="title"
            app:argType="string" />
    </action>

</navigation>
